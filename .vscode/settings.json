{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": ["class", "className", "theme"],
  "tailwindCSS.experimental.classRegex": [
    ["twMerge\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["createTheme(?:<\\w+>)?\\s*\\(([^)]*)\\)", "{?\\s?[\\w].*:\\s*?[\"'`]([^\"'`]*).*?,?\\s?}?"]
  ],
  "workbench.colorCustomizations": {
    "[*]": {
      // Title Bar - Spotify Green & Black
      "titleBar.activeBackground": "#1db954",
      "titleBar.activeForeground": "#ffffff",
      "titleBar.inactiveBackground": "#191414",
      "titleBar.inactiveForeground": "#b3b3b3",

      // Activity Bar - Spotify Black
      "activityBar.background": "#191414",
      "activityBar.foreground": "#ffffff",
      "activityBar.inactiveForeground": "#535353",
      "activityBar.activeBorder": "#1db954",

      // Status Bar - Spotify Green
      "statusBar.background": "#1db954",
      "statusBar.foreground": "#191414",
      "statusBar.noFolderBackground": "#191414",
      "statusBar.noFolderForeground": "#b3b3b3",

      // Borders & Accents - Spotify Green
      "window.activeBorder": "#1db954",
      "focusBorder": "#1db954",
      "tree.indentGuidesStroke": "#1db954",

      // Buttons - Spotify Green
      "button.background": "#1db954",
      "button.foreground": "#191414"
    }
  },
  "debug.javascript.defaultRuntimeExecutable": {
    "pwa-node": "${workspaceFolder}/.vscode/mise-tools/node"
  },
  "shellcheck.executablePath": "${workspaceFolder}/.vscode/mise-tools/shellcheck"
}
