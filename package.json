{
  "name": "jermaines-spotify-time-machine",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "commit": "commit",
    "clean": "rm -rf .next node_modules/.cache && rm -rf node_modules && pnpm store prune",
    "clean:cache": "rm -rf .next node_modules/.cache .turbo",
    "clean:all": "rm -rf .next node_modules/.cache .turbo node_modules && pnpm store prune",
    "debug": "pnpm run clean:all && pnpm install && pnpm run build && pnpm run dev",
    "dev": "next dev --hostname 127.0.0.1",
    "build": "next build",
    "start": "next start",
    "lint": "oxlint $@ && eslint $@",
    "lint:fix": "oxlint --fix $@ && eslint --fix $@",
    "fmt": "pnpm exec prettier --check .",
    "fmt:fix": "pnpm exec prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "check": "turbo lint type-check",
    "check:branding": "grep -RIn --exclude-dir=.next --exclude=**/output.css --exclude=**/*.svg --exclude=BRANDING.md '#1db954\\|#1DB954\\|#191414\\|#121212\\|#b3b3b3' src || true",
    "check:all": "turbo lint fmt type-check",
    "security": "mise run security",
    "security:secrets": "trufflehog filesystem . --no-update --fail --exclude-paths=.trufflehog-exclude.txt",
    "security:deps": "snyk test --all-projects",
    "security:sast": "semgrep --config semgrep.yml src",
    "security:env": "dotenv-linter .env.example",
    "spellcheck": "typos",
    "audit": "mise run audit",
    "badges:update": "node scripts/update-readme-badges.js",
    "postinstall": "pnpm run badges:update",
    "version": "pnpm run badges:update && git add README.md"
  },
  "dependencies": {
    "@next/third-parties": "^16.1.0",
    "@sentry/nextjs": "^10.32.0",
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@vercel/analytics": "^1.6.1",
    "@vercel/functions": "^3.3.4",
    "@vercel/speed-insights": "^1.3.1",
    "date-fns": "^4.1.0",
    "fflate": "^0.8.2",
    "flowbite": "^4.0.1",
    "flowbite-react": "^0.12.14",
    "helmet": "^8.1.0",
    "next": "^16.1.0",
    "next-auth": "^4.24.13",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@commitlint/prompt-cli": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@prettier/plugin-oxc": "^0.1.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-oxlint": "^1.37.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "lefthook": "^2.0.13",
    "oxlint": "^1.37.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.26.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "protobufjs",
      "sharp",
      "lefthook"
    ]
  }
}
