{
  "name": "jermaines-spotify-time-machine",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "commit": "commit",
    "clean": "rm -rf .next node_modules/.cache && rm -rf node_modules && pnpm store prune",
    "clean:cache": "rm -rf .next node_modules/.cache .turbo",
    "clean:all": "rm -rf .next node_modules/.cache .turbo node_modules && pnpm store prune",
    "debug": "pnpm run clean:all && pnpm install && pnpm run build && pnpm run dev",
    "dev": "next dev --hostname 127.0.0.1",
    "build": "next build",
    "start": "next start",
    "lint": "oxlint $@ && eslint $@",
    "lint:fix": "oxlint --fix $@ && eslint --fix $@",
    "fmt": "pnpm exec prettier --check .",
    "fmt:fix": "pnpm exec prettier --write .",
    "type-check": "tsc --noEmit",
    "analyze": "ANALYZE=true next build",
    "check": "turbo lint type-check",
    "check:branding": "grep -RIn --exclude-dir=.next --exclude=**/output.css --exclude=**/*.svg --exclude=BRANDING.md '#1db954\\|#1DB954\\|#191414\\|#121212\\|#b3b3b3' src || true",
    "check:all": "turbo lint fmt type-check test",
    "security": "mise run security",
    "security:secrets": "trufflehog filesystem . --no-update --fail --exclude-paths=.trufflehog-exclude.txt",
    "security:deps": "snyk test --all-projects",
    "security:sast": "semgrep --config semgrep.yml src",
    "security:env": "dotenv-linter .env.example",
    "spellcheck": "typos",
    "audit": "mise run audit",
    "prebuild": "turbo type-check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --project=unit",
    "test:integration": "vitest run --project=integration",
    "test:browser": "vitest run --project=browser",
    "test:browser:ui": "vitest --ui --project=browser",
    "test:debug": "vitest --no-file-parallelism --pool=forks",
    "test:benchmark": "vitest bench",
    "test:typecheck": "vitest typecheck",
    "test:reporter": "vitest run --reporter=verbose --reporter=json --outputFile=test-results/results.json",
    "test:shard": "vitest run --project=unit --project=integration --reporter=blob --coverage.enabled=true --coverage.reporter=blob",
    "test:merge-reports": "vitest run --merge-reports",
    "test:related": "vitest related",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@next/third-parties": "^16.0.0",
    "@sentry/nextjs": "^10.21.0",
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@vercel/analytics": "^1.5.0",
    "@vercel/functions": "^3.1.4",
    "@vercel/speed-insights": "^1.2.0",
    "date-fns": "^4.1.0",
    "fflate": "^0.8.2",
    "flowbite": "^3.1.2",
    "flowbite-react": "^0.12.9",
    "next": "^16.0.0",
    "next-auth": "^4.24.11",
    "posthog-js": "^1.280.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@eslint/js": "^9.38.0",
    "@prettier/plugin-oxc": "^0.0.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser-playwright": "^4.0.2",
    "@vitest/browser-preview": "^4.0.2",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-oxlint": "^1.24.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.8",
    "lefthook": "^2.0.0",
    "msw": "^2.11.6",
    "node-mocks-http": "^1.17.2",
    "oxlint": "^1.24.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "tailwindcss": "^4.1.16",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  },
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "protobufjs",
      "sharp",
      "lefthook"
    ]
  }
}
