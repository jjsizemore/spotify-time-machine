{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["type-check"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"start": {
			"cache": false
		},
		"lint": {
			"inputs": ["**/*.{js,jsx,ts,tsx}", ".eslintrc.*", "eslint.config.*"]
		},
		"fmt": {
			"inputs": [
				"**/*.{js,jsx,ts,tsx,json,md}",
				".prettierrc.*",
				"prettier.config.*"
			]
		},
		"type-check": {
			"inputs": ["**/*.{ts,tsx}", "tsconfig.json"]
		},
		"check": {
			"dependsOn": ["lint", "type-check"]
		},
		"check:all": {
			"dependsOn": ["lint", "fmt", "type-check"]
		},
		"analyze": {
			"dependsOn": ["build"],
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"clean:cache": {
			"cache": false
		},
		"clean:all": {
			"cache": false
		},
		"debug": {
			"cache": false
		}
	}
}
